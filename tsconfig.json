{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es2016",
    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src/",
    "stripInternal": true,
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./dist/**/*"
  ]
}